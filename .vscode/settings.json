{
    "python.formatting.provider": "black",
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "*/.pyc": { "when": "$(basename).py" },
      "**/_pycache_": true,
      "**/.pytest_cache": true
    }
  }
